<h1>Create a new Pet</h1>

<form method="POST" action="/pets">
    <label>Name:<label>
    <br> 
    <input type="text" name="pet[name]" id="pet_name">

    <h3>Existing Owner</h3>
    <%@owners.each do |owner|%>
        <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>"><%= owner.name %></input>
    <%end%>
    <br>

    <h3>New Owner</h3>
    <label>Owner Name:<label>
    <br> 
    <input type="text" name="owner[name]" id="owner_name">
    <br><br>
    <input type="submit" value ="Create Pet">
</form>
