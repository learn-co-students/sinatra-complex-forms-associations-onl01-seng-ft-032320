<h1>Update Pet</h1>


<form action="/pets/<%= @pet.id %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="patch">
    <label>Name:</label>

    <br>

    <input type="text" name="pet_name" id="pet_name" value="<%= @pet.name %>">

    <br>
    <p>Select an existing owner or create a new one below.</p>

    <h3>Existing Owners</h3>
    <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_ids][]" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if @owner.id == owner.id %>><%= owner.name %><br>
    <% end %>
    <br>

    <h3>New Owner</h3>
    <br>
    <label>Owner Name: </label>
    <br>
    <input type="text" name="owner_name" id="owner[name]">
    <br><br>

    <input type="submit" value="Update Pet">
</form>
