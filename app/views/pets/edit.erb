<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
<input type="hidden" id='hidden' name="_method" value="PATCH">
<label>Name:</label><br>
<input type="text" name="pet[name]" value="<%= @pet.name %>" id="pet_name"><br><br>

<% Owner.all.each do |owner| %>
<input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner == owner %>><%=owner.name%></input><br>
  <% end %>
  <br><br>
  <h1>Create Owner:</h1><br>
  <input type="text" name="owner[name]" id="owner_name">
  <br>
  <input type="submit" value="Update Pet">
</form>

