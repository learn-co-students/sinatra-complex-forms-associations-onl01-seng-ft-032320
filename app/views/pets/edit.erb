<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="patch">
    <label>Pet Name:</label>

    <br>

    <input type="text" name="pet_name" value="<%= @pet.name %>">

    <h3>Existing Owners</h3>
  
    <% @owners.each do |owner| %>
        <input type="radio" name="owner_id" value="<%= owner.id %>" id="<%= owner.id %>" <%= 'checked' if @pet.owner == owner %>>
        <label><%= owner.name %></label>
    <% end %>
  
    <br>

    <h3>New Owner</h3>
    <label >Owner Name: </label> <br>
    <input type="text" name="owner[name]" id="owner_name"><br><br>

    <input type="submit" value="Update Pet">
</form>
